        <!--------- PARALLAX ---------------------------------------------->
        <div class="welcome-container">
            <h1>Welcome</h1>
            <p>This is my little dairy. Enjoy!</p>
        </div>
        <div class="parallax" id="trans"></div>
        <!-------- END OF PARALLAX ---------------------------------------->

        <section class="container content">

            <% blogPosts.forEach(blogPost => { %>
            <div class="box">
                <div class="box-img">
                    <img src="img/aperitif.jpg" name="blogImg" alt="image">
                </div>
                <div class="box-text">
                <h2><%= blogPost.blogTitle %> </h2>
                <h4><%= blogPost.snippet %> </h4>
                
                <p><%= blogPost.content.substring(0, 200) + "..." %> <a class="continue" href="/index/<%= blogPost.blogTitle %>">Continue reading...</a></p> 
                </div>
            </div>
            <% }) %>

        </section>


        
            
        

        

        <!------------------ BOTTOM / FOOTER ---------------------------------------------------->
        <%- include('./partials/footer.ejs') %>

<script src="script.js"></script>

</body>
</html>